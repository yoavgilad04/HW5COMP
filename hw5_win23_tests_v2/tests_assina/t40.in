int factorial(int x)
{
    if(x <= 1)
        return 1;
    return factorial(x - 1) * x;
}

void main()
{
    print("this is recursion test");
    print("we will calculate factorial num:");
    int x = factorial(2);
    int y = factorial(7);
    int z = factorial(0);

    print("factorial(2) should be 2. actual:");
    printi(x);
    print("factorial(7) should be 5040. actual:");
    printi(y);
    print("factorial(0) should be 1. actual:");
    printi(z);
    print("OK bye!");
}